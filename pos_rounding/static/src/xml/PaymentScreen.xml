<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_rounding.PaymentScreenButtons" t-inherit="point_of_sale.PaymentScreenButtons" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('payment-buttons')]" position="inside">
            <button class="button btn btn-light py-3 text-start rounded-0 border-bottom"
                        t-on-click="roundingTotalPaid">
                <i class="fa fa-check"/>
                <span class="back_text">Rounding</span>
            </button>
        </xpath>
    </t>

</templates>
